<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Top-Rated Games</title>
    <link rel="stylesheet" type="text/css" href="/css/top-rated.css">
</head>
<body>
    <%- include('partials/header') %>

    <main class="main-content">
        <h1 class="glow">ðŸ”¥ Top 15 Rated Games ðŸ”¥</h1>
        
        <div class="game-list">
            <% topGames.forEach((game, index) => { %>
                <div class="game-card">
                    <div class="ranking">#<%= index + 1 %></div>
                    <h2>
                        <a href="/game/<%= game.title.replace(/\s+/g, '-').toLowerCase() %>">
                            <%= game.title %>
                        </a>
                    </h2>
                    <p><strong>Release Year:</strong> <%= game.releaseYear %></p>
                    <p><strong>Genre:</strong> <%= game.genre %></p>
                    <p><strong>Developer:</strong> <%= game.developer %></p>
                    <p class="rating"><strong>ðŸ”¥ Rating:</strong> <%= game.averageRating %>/10</p>
                </div>
            <% }) %>
        </div>
    </main>

    <%- include('partials/footer') %>
</body>
</html>